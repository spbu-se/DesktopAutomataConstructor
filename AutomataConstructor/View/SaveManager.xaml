<UserControl x:Class="AutomataConstructor.View.SaveManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:AutomataConstructor.ViewModels"
             xmlns:local="clr-namespace:AutomataConstructor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:SaveManagerViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <Button Content="SAVE LAYOUT" Command="{Binding SaveLayoutCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
